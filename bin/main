#!/usr/bin/env ruby
load 'lib/logic.rb'

board_array = [' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ', ' ']
player_turn = 1

puts 'Welcome to our tic-tac-toe game, to start, enter your names'

puts 'Player 1, enter your name: '
name1 = gets.chomp
puts 'Player 2, enter your name: '
name2 = gets.chomp
game_finished = false
while !game_finished
  puts "Here's the board:"
  print_board(board_array)
  puts "Player #{player_turn}, select which cell you want to fill by writing it's cell number"

  output = " "
  while output != ""
    number = gets.chomp
    number = number.to_i - 1
    output = validate_input(board_array,player_turn,number)

    puts output
  end
  
  board_array[number] = player_turn == 1 ? 'X' : 'Y'
  
  player_turn = player_turn == 1 ? 2 : 1
end